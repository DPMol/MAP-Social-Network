<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<VBox styleClass="vbox" alignment="CENTER" minHeight="400" minWidth="600" prefHeight="400.0" prefWidth="600.0" spacing="30" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetworkgui.controller.SignUpController" stylesheets="@style.css">
   <children>
       <Label styleClass="t" alignment="CENTER" layoutX="262.0" layoutY="35.0" text="Sign up">
           <font>
               <Font size="20.0" />
           </font>
       </Label>
       <HBox alignment="CENTER" spacing="40">
           <VBox alignment="CENTER">
               <Label styleClass="t" text="Username:" />
               <TextField fx:id="userNameTF" />

               <Label styleClass="t" text="First name:" />
               <TextField fx:id="firstNameTF" />

               <Label styleClass="t" text="Last name:" />
               <TextField fx:id="lastNameTF" />

               <Label styleClass="t" text="Email address:" />
               <TextField fx:id="emailTF" />

               <Label styleClass="t" text="Birth Date (dd-MM-yyyy)" />
               <TextField  fx:id="birthDatePicker" />
           </VBox>
           <VBox alignment="CENTER">

               <Label styleClass="t" text="Country:" />
               <TextField fx:id="countryTF" />
               <Label styleClass="t" text="County:" />
               <TextField fx:id="countyTF" />

               <Label styleClass="t" text="City:" />
               <TextField fx:id="cityTF" />

               <Label styleClass="t" text="Street:" />
               <TextField fx:id="streetTF" />

               <Label styleClass="t" text="Street number:" />
               <TextField fx:id="streetNumberTF" />
           </VBox>
         <VBox alignment="CENTER">
            <children>
   
                  <Label styleClass="t" text="Password:" />
                  <PasswordField fx:id="passwordTF" />
               <Label styleClass="t" text="Confirm Password:" />
               <PasswordField fx:id="confirmPasswordTF" />
            </children>
         </VBox>
       </HBox>


      <Button mnemonicParsing="false" onAction="#mainAppStartUp" text="Sign up" />

       <Button mnemonicParsing="false" onAction="#logInStartUp" text="or Log in">

       </Button>
   </children>
</VBox>
